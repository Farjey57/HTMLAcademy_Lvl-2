extends ./layouts/mainLayout
include ../sections/form/form
include ../blocks/modal/modal



block title
    title Конкурс на самое безбашенное путешествие с Пинк

block main
    main.page-main
        .heading-page.backhead
            h1.text__normal.heading-page__title(tabindex="1") Конкурс на самое безбашенное путешествие с Пинк
        +form("container")   
    - const modRej = {class: "reject", but: "ок", title: "Что-то пошло не так!", text: "Проверьте поля, выделенные красным, скорее всего вы забыли их заполнить", back: false}     
    +modal(modRej)
    - const modApprove = {class: "approve", but: "ЗАКРЫТЬ ОКНО", title: "Ваша заявка отправлена", text: "Спасибо за ваше участие, ваша заявка уже поступила к нам. В ближайшее время мы рассмотрим ее и оповестим вас.", back: true}     
    +modal(modApprove)

append script
    script(src="./js/form.js" defer)